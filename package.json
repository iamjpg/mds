{
  "name": "mds-components",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/mds-components/mds-components.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "watch": {
    "copy": {
      "patterns": [
        "www"
      ],
      "extensions": "js, css",
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "dev": "npm-run-all --parallel docs:dev stencil:start tailwind:dev watch",
    "tailwind:dev": "NODE_ENV=development postcss src/tailwind/styles.css -o vuepress/.vuepress/public/styles/mds-core.css -w",
    "docs:dev": "vuepress dev vuepress",
    "docs:build": "vuepress build docs",
    "stencil:build": "stencil build --docs",
    "stencil:start": "stencil build --dev --watch",
    "stencil:test": "stencil test --spec --e2e",
    "stencil:test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "copy": "copyfiles -u 2 www/build/*.js vuepress/.vuepress/public/components",
    "watch": "npm-watch"
  },
  "dependencies": {
    "@stencil/core": "^2.0.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.0.1",
    "postcss-nested": "^5.0.5",
    "vuepress-theme-yuu": "^3.0.1"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.1",
    "vuepress": "^1.8.2",
    "vuepress-plugin-flexsearch": "^0.1.0"
  }
}
